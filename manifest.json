{
  "manifest_version": 3,
  "name": "TMDB Poster Extension",
  "version": "1.0",
  "description": "Adds a poster next to movies and actors on TMDB.",
  "content_scripts": [
    {
      "matches": ["https://www.themoviedb.org/*"],
      "js": ["contentScript.js"]
    }
  ],
  "background": {
    "service_worker": "backgroundScript.js"
  },
  "permissions": ["activeTab", "storage"],
  "icons": {
    "48": "icon48.png"
  }
}
